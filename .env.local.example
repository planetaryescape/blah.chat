# Convex
# Get these after running: bunx convex dev
NEXT_PUBLIC_CONVEX_URL=
CONVEX_DEPLOYMENT=

# Clerk
# Get these from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
CLERK_WEBHOOK_SECRET=
CLERK_ISSUER_DOMAIN=

NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/app
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/app

# Vercel AI Gateway (Required for all AI providers)
# Get from: https://vercel.com/docs/ai-gateway
AI_GATEWAY_API_KEY=

# Legacy AI API Keys (No longer needed - use AI Gateway instead)
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
# GOOGLE_GENERATIVE_AI_API_KEY=
# CEREBRAS_API_KEY=
# GROQ_API_KEY=
# OPENROUTER_API_KEY=

# AI Tools & Integrations
TAVILY_API_KEY=
JINA_API_KEY=
E2B_API_KEY=
FIRECRAWL_API_KEY=

# Audio Transcription (Optional - defaults to OpenAI if not using Groq)
OPENAI_API_KEY=
GROQ_API_KEY=

# PostHog Analytics & Error Tracking
# Get from: https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
POSTHOG_API_KEY= # Same as NEXT_PUBLIC_POSTHOG_KEY (for server-side tracking in Convex)

# Self-Hosted Configuration (Optional - Override Defaults)
# Usage limits for self-hosted instances
DEFAULT_DAILY_MESSAGE_LIMIT=50  # Messages per user per day
DEFAULT_MONTHLY_BUDGET=10  # USD monthly budget per user
BUDGET_ALERT_THRESHOLD=0.8  # Send alert at 80% budget usage
BUDGET_HARD_LIMIT_ENABLED=true  # Block requests when budget exceeded
ALERT_EMAIL=  # Admin email for budget alerts (defaults to blah.chat@bhekani.com)

# Telemetry (Opt-In)
# blah.chat collects anonymous usage statistics to improve the software.
# No personal data is collected. All data is anonymized.
# Disable with: TELEMETRY_DISABLED=1
# Debug mode (see what would be sent): TELEMETRY_DEBUG=1
TELEMETRY_DISABLED=  # Set to "1" to disable telemetry
TELEMETRY_DEBUG=  # Set to "1" to see telemetry events without sending

# App Version (for telemetry)
APP_VERSION=0.1.0  # Update this when deploying new versions
