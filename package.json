{
  "name": "blah-chat",
  "version": "1.6.0",
  "private": true,
  "packageManager": "bun@1.3.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "format": "turbo format",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:run": "turbo test:run",
    "test:e2e": "turbo test:e2e",
    "convex": "bun --filter=@blah-chat/backend run dev",
    "convex:deploy": "bun --filter=@blah-chat/backend run deploy",
    "prepare": "lefthook install",
    "byod:sync": "bun run scripts/sync-byod-schema.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "lefthook": "^2.0.12",
    "turbo": "^2.3.0"
  },
  "dependencies": {
    "bible-passage-reference-parser": "^3.1.0"
  }
}
