{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["../../apps/web/src/*"]
    }
  },
  "include": ["convex/**/*.ts"],
  "exclude": [
    "node_modules",
    "convex/_generated",
    "convex/__tests__",
    "**/*.test.ts"
  ]
}
